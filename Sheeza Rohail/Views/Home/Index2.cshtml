@{
    ViewBag.title = "Page 2";
}

@model index2Model

<head>
    <title>@ViewBag.title</title>
</head>
<body>
    <h3 style="color:hotpink">Grade Calculator</h3>
    <!-- The forms will collect user input-->
    <form method="post">

        <!--Setting range for the input-->
        <label>Assignments: </label>
        <input type="number" id="assignment" asp-for="assignment" value="0" min="0" max="100" step="0.01"/>
        <br /> <br />
        <label>Group Projects: </label>
        <input type="number" id="group" asp-for="group" value="0" min="0" max="100" step="0.01"/>
        <br /> <br />
        <label>Quizzes: </label>
        <input type="number" id="quiz" asp-for="quiz" value="0" min="0" max="100" step="0.01"/>
        <br /> <br />
        <label>Exams: </label>
        <input type="number" id="exam" asp-for="exam" value="0" min="0" max="100" step="0.01"/>
        <br /> <br />
        <label>Intex: </label>
        <input type="number" id="intex" asp-for="intex" value="0" min="0" max="100" step="0.01"/>
        <br /> <br />

        <!--Input type is submit and will give results upon click-->
        <input class="button" type="submit" onclick="grade()" value="show results" />

        <div asp-validation-summary="All"></div>
    </form>
</body>